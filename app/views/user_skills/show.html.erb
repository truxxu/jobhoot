<div class="container-fluid gradient-profile">
  <div class="row">
    <div class="col-12 col-md-8 offset-md-2 col-lg-6 offset-lg-3">
      <div class="form-profile">
        <nav class="nav nav-pills nav-fill">
          <%= link_to "About Me", user_profile_path(current_user.user_profile.id),
            class: "nav-item nav-link" %>
          <%= link_to "Studies", user_study_path(current_user.user_profile.id),
            class: "nav-item nav-link" %>
          <%= link_to "Other Studies", user_other_study_path(current_user.user_profile.id), class: "nav-item nav-link" %>
          <%= link_to "Languages", user_language_path(current_user.user_profile.id),
            class: "nav-item nav-link" %>
          <%= link_to "Work Preferences", work_preference_path(current_user.user_profile.id), class: "nav-item nav-link" %>
          <%= link_to "Skills", user_skill_path(current_user.user_profile.id),
            class: "nav-item nav-link active" %>
          <%= link_to "Working Experience", user_experience_path(current_user.user_profile.id), class: "nav-item nav-link" %>
          <%= link_to "Personality Traits", user_trait_path(current_user.user_profile.id), class: "nav-item nav-link" %>
          <%= link_to "Hobbies", user_hobby_path(current_user.user_profile.id),
          class: "nav-item nav-link" %>
        </nav>
        <h3>
          Skills
          <%= link_to new_user_skill_path, class: "btn-add" do %>
            <i class="fas fa-plus"></i>
          <% end %>
        </h3>
        <% @skill.each_with_index do |t, i| %>
          <h4>
            <%= t.skill.name %>
            <%= link_to user_skill_path(t.id), method: :delete,
            class: "btn-add" do %>
              <i class="far fa-trash-alt"></i>
            <% end %>
          </h4>
        <% end %>
      </div>
    </div>
  </div>
</div>
