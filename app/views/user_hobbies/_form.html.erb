<%= simple_form_for @hobby do |f| %>
<%= f.input :name %>
<%= f.input :category, collection: ["Collecting", "Making and Tinkering",
                                    "Outdoor Recreation", "Gardening",
                                    "Liberal Arts Pursuits", "Sports and Games",
                                    "Indoor Recreation", "Other"] %>
  <%= f.button :submit, class: "btn btn-primary" %>
<% end %>
