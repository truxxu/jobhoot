<h2>Create a new Profile</h2>
<h3>About you</h3>
<%= simple_form_for(@profile) do |f| %>
  <%= f.input :name %>
  <%= f.input :last_name %>
  <%= f.input :photo %>
  <%= f.input :photo_cache, as: :hidden %>
  <%= f.input :birth_date, as: :string, input_html: { class: 'datepicker birth_date' } %>
  <%= f.input :sex, collection: [:Male, :Female, :Other] %>
  <%= f.input :phone, as: :tel %>
  <%= f.button :submit, class: "btn btn-primary" %>

<% end %>

